<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cikarastudio.cikarahotelbooking">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_sapphire"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_sapphire_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activity.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.RegisterActivity"
            android:parentActivityName=".Activity.LoginActivity" />
        <activity
            android:name=".Activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.MyAccountActivity"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.InfoActivity"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.LocationActivity"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.GalleryActivity"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.MyBookingActivity"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.TipeKamarListActivity"
            android:parentActivityName=".Activity.MainActivity" />
        <activity android:name=".Activity.MainActivity">

        </activity>
    </application>

</manifest>